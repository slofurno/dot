#hardstatus alwayslastline

defscrollback 15000

term xterm-256color
vbell off

bind j focus top
bind k focus bottom

#caption always '%{+b}%n*%t%{-} %h%='

backtick 1 0 0 /usr/local/bin/screen-mem-usage
#backtick 1 0 3 $HOME/mem.sh
backtick 2 0 0 /usr/local/bin/screen-cpu-usage
#backtick 3 0 0 ifstat
backtick 3 0 0 /home/slofurno/network.sh
backtick 4 0 0 /home/slofurno/bat.sh

hardstatus alwayslastline
hardstatus string '%{gk}Net:%{Gk}%3`%{gk} %=%{bk}Mem:%{Bk}%1`  %{yk}Cpu:%{Yk}%2`%%  %{Rk}Load:%{rk}%l%= %{gk}Bat:%{Gk}%4`%%  %{ck} %D %m/%d %{Ck}%C%a%{w}'
